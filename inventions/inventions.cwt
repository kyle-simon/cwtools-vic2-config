types = {
	type[invention_file] = {
		type_per_file = yes
		path = "game/inventions"
	}
	type[invention] = {
		path = "game/inventions"
		localisation = {
			## required
			name = "$"
		}
	}
}

invention = {
	limit = { <technology> = int[1..1] }
	chance = {
		base = int
		## cardinality = 0..inf
		modifier = {
			# TODO: add chance modifiers invention
		}
	}
	effect = {
		alias_name[modifier] = alias_match_left[modifier]
	}
}

